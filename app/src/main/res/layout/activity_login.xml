<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.app.revature.revaturepro.Login">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/revature_logo1"
        android:id="@+id/imageView2"
        android:layout_above="@+id/imageView16"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="87dp" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Email-Id"
        android:ems="10"
        android:id="@+id/editText8"
        android:layout_below="@+id/imageView3"
        android:layout_alignStart="@+id/editText5"
        android:layout_marginTop="14dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:hint="Password"
        android:ems="10"
        android:id="@+id/editText5"
        android:layout_below="@+id/editText8"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/fb_logo"
        android:id="@+id/imageView3"
        android:layout_marginTop="146dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/imageView4"
        android:layout_marginEnd="18dp" />

    <Button
        android:text="Login"
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:id="@+id/login_button"
        android:background="@android:color/holo_orange_dark"
        android:textColor="@android:color/black"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />


    <TextView
        android:text="New User?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_button"
        android:id="@+id/textView9"
        android:textSize="18sp" />

    <TextView
        android:text="Forgot password?"
        android:textColor="@android:color/holo_blue_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_forgot_password"
        android:layout_above="@+id/txt_register_here"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="13dp"
        android:textSize="19sp" />

    <TextView
        android:text="Register here."
        android:textColor="@android:color/holo_blue_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_register_here"
        android:textSize="18sp"
        android:layout_above="@+id/login_button"
        android:layout_toStartOf="@+id/txt_forgot_password" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/gplus_logo"
        android:id="@+id/imageView4"
        android:layout_above="@+id/editText8"
        android:layout_toStartOf="@+id/txt_forgot_password" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/linked_in_logo"
        android:id="@+id/imageView16"
        android:layout_marginStart="24dp"
        android:layout_above="@+id/editText8"
        android:layout_toEndOf="@+id/imageView4" />

    <TextView
        android:text="Login"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:id="@+id/textView2"
        android:layout_above="@+id/imageView4"
        android:layout_alignEnd="@+id/imageView4" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_sort_alphabetically"
        android:layout_alignTop="@+id/editText8"
        android:layout_alignStart="@+id/imageView3"
        android:id="@+id/imageView18" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_lock_idle_lock"
        android:layout_below="@+id/editText8"
        android:layout_alignEnd="@+id/imageView18"
        android:id="@+id/imageView19" />

</RelativeLayout>
